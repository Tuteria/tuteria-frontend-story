{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "resolveJsonModule": true,
    "composite": true,
    "jsx": "react",
    "paths": {}
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "tmp"]
}
